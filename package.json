{
    "name": "tap-cap-table",
    "version": "1.0.0-alpha.0",
    "private": true,
    "author": "Alex Palmer, Victor Mimo",
    "license": "MIT",
    "description": "Transfer Agent Protocol onchain cap table",
    "type": "module",
    "scripts": {
        "start": "nodemon src/server.js",
        "eslint": "eslint --cache --cache-location=node_modules/.cache/.eslintcache --fix",
        "lint": "yarn run eslint . --ext .js,.jsx,.ts,.tsx",
        "format": "prettier '**/*' --ignore-unknown --write",
        "typecheck": "concurrently --raw yarn:typecheck:*",
        "typecheck:app": "tsc --noEmit",
        "prepare": "husky install",
        "build": "cd chain && node ../src/scripts/deployAndLinkLibs.js",
        "setup": "cd chain && foundryup && forge build --via-ir",
        "deseed": "node src/db/scripts/deseed.js",
        "test": "cd chain && forge test",
        "export-manifest": "cd src/db/samples && zip -r notPoet.zip notPoet && mv notPoet.zip $HOME/Downloads"
    },
    "dependencies": {
        "ajv": "^8.12.0",
        "ajv-formats": "^2.1.1",
        "axios": "^1.4.0",
        "busboy": "^1.6.0",
        "date-fns": "^2.28.0",
        "dotenv": "^16.3.1",
        "ethers": "^6.7.1",
        "express": "^4.18.2",
        "mongoose": "^7.4.2",
        "solc": "^0.8.20",
        "xstate": "^4.38.2",
        "yauzl": "^2.10.0"
    },
    "browserslist": [
        "defaults",
        "not IE 11",
        "maintained node versions"
    ],
    "devDependencies": {
        "@types/node": "^20.10.8",
        "@types/uuid": "^9.0.2",
        "eslint": "^8.21.0",
        "eslint-config-next": "^13.1.6",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "nodemon": "^3.0.1",
        "prettier": "^2.7.1",
        "solhint": "^3.4.1",
        "typescript": "^5.1.6",
        "uuid": "^9.0.0"
    }
}
